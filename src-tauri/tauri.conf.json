{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "TerraNova",
  "version": "0.1.5",
  "identifier": "dev.hypersystems.terranova",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "TerraNova",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' blob:; worker-src 'self' blob:; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; connect-src 'self' http://localhost:* https://github.com https://*.githubusercontent.com https://objects.githubusercontent.com"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "resources": [
      "../templates/void/",
      "../templates/forest-hills/",
      "../templates/shattered-archipelago/",
      "../templates/tropical-pirate-islands/",
      "../templates/eldritch-spirelands/"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "signingIdentity": "-",
      "minimumSystemVersion": "10.15",
      "entitlements": "./Entitlements.plist"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/HyperSystemsDev/TerraNova/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRCOEE4OERDNzhENjA3MDAKUldRQUI5WjQzSWlLUzgvS0h1SkVsbkpLQmdaanNqU1pERVBWWUJ5MzZVeXUyenBuNU41RDJCQVQK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
